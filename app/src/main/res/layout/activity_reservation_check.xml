<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id = "@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예약 내용을 한번 더 확인해주세요"
        android:textSize="18sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="32sp"
        app:layout_constraintTop_toBottomOf="@+id/back_btn"
        app:layout_constraintLeft_toLeftOf="parent" />
    <ScrollView
        android:layout_width="330dp"
        android:layout_height="490dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/payment_infor"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/info_payment_layout"
            android:background="@drawable/payment_infor"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"

                android:text="환자"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textSize="19sp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/patient_name"
                app:layout_constraintTop_toBottomOf="@+id/patient_name"
                />

            <TextView
                android:id="@+id/patient_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textSize="18sp"
                android:layout_marginTop="26dp"
                app:layout_constraintStart_toStartOf="@id/name"
                app:layout_constraintTop_toBottomOf="@+id/name"
                />
            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENDER"
                android:textSize="19sp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/patient_gender"
                app:layout_constraintTop_toBottomOf="@+id/patient_gender"
                />

            <TextView
                android:id="@+id/patient_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대폰"
                android:textSize="18sp"
                android:layout_marginTop="26dp"
                app:layout_constraintStart_toStartOf="@id/gender"
                app:layout_constraintTop_toBottomOf="@+id/gender"
                />
            <TextView
                android:id="@+id/phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PhoneNumber"
                android:textSize="19sp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/patient_phonenumber"
                app:layout_constraintTop_toBottomOf="@+id/patient_phonenumber"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/from"
                android:layout_width="250dp"
                android:layout_height="46dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/from_background"
                app:layout_constraintTop_toBottomOf="@+id/phonenumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <ImageView
                    android:id="@+id/from_location_img"
                    android:layout_width="18dp"
                    android:layout_height="25dp"
                    android:background="@drawable/location_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/from_location_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출발지"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="@+id/from_location_img"
                    app:layout_constraintStart_toEndOf="@+id/from_location_img"/>
                <TextView
                    android:id="@+id/from_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="@+id/from_location_name"
                    app:layout_constraintStart_toEndOf="@+id/from_location_name"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/to"
                android:layout_width="250dp"
                android:layout_height="46dp"
                android:background="@drawable/to_background"
                app:layout_constraintTop_toBottomOf="@+id/from"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <ImageView
                    android:id="@+id/to_location_img"
                    android:layout_width="18dp"
                    android:layout_height="25dp"
                    android:background="@drawable/location_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/to_location_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="도착지"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="@+id/to_location_img"
                    app:layout_constraintStart_toEndOf="@+id/to_location_img"/>
                <TextView
                    android:id="@+id/to_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="@+id/to_location_name"
                    app:layout_constraintStart_toEndOf="@+id/to_location_name"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/manager_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="담당 매니저"
                android:textSize="18sp"

                app:layout_constraintStart_toStartOf="@id/phonenumber"
                app:layout_constraintTop_toBottomOf="@+id/to" />

            <include
                android:id="@+id/manager"
                layout="@layout/item_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/manager_text"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/manager_text"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">



        <TextView
            android:id="@+id/next_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue"
            android:gravity="center"
            android:text="예약하기"
            android:textColor="@color/white"
            android:textSize="20sp" />



    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>